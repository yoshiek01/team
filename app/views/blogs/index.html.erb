<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
  <!-- 中央寄せにするため、wrapperでブログ画面をかこむ -->

    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
      <%= link_to "ブログを作成する", new_blog_path, class: 'btn btn-default' %>
      <!-- btnはボタン-->
      
      <% @blogs.each do |blog| %>
       <div class="row">
        <h3><strong><%= blog.user.name %></strong></h3>
        <h4><strong><%= blog.title %></strong></h4>
        <!-- strongは太字 -->
 
        <p><%= blog.content %></p>
        
        <%= link_to "Show", blog_path(blog.id), class: 'btn btn-default btn-sm btn-info' %>
        <%= link_to "Edit", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "Destroy", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
       </div>
      <% end %>
  </div>
</div>